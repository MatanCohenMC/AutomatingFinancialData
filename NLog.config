<?xml version="1.0" encoding="utf-8"?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Off">

  <!-- Optional diagnostics (turn ON only when troubleshooting)
  internalLogLevel="Trace"
  internalLogFile="${basedir}/Logs/nlog-internal.log"
  -->

  <targets>

    <!-- Main file log (path is set at runtime via GDC: LogFilePath) -->
    <target xsi:type="File"
            name="fileLog"
            fileName="${gdc:item=LogFilePath}"
            layout="${longdate}|${level:uppercase=true}|${logger}|${message}${onexception:inner=|${exception:format=ToString}}"
            keepFileOpen="true"
            concurrentWrites="true"
            buffered="false"
            autoFlush="true"
            encoding="utf-8" />

  </targets>

  <rules>
    <!-- Capture everything (set to Info later if you want less noise) -->
    <logger name="*" minlevel="Trace" writeTo="fileLog" />
  </rules>

</nlog>
